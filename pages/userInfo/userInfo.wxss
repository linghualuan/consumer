page {
  background-color: #FAF2F9;
  position: relative;
}
page .content {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}
page .content .img {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: -3;
}
page .content .img image {
  height: 100%;
  width: 100%;
}
page .content .wrap {
  width: 80vw;
  height: 800rpx;
  background-color: aqua;
  padding: 50rpx 0;
  margin: 100rpx auto;
  border-radius: 50rpx;
  background-color: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(5px);
}
page .content .wrap .col {
  margin: 30rpx 40rpx;
  display: flex;
}
page .content .wrap .col .title {
  flex: 2;
  text-align: right;
  padding-right: 30rpx;
}
page .content .wrap .col .inp {
  flex: 5;
  height: 80rpx;
}
page .content .wrap .col .inp input {
  background-color: white;
  border-radius: 10rpx;
  padding-left: 30rpx;
  height: 100%;
  border-radius: 40rpx;
  filter: opacity(70%);
}
page .content .wrap .btn {
  width: 300rpx;
  height: 70rpx;
  color: black;
  border-radius: 35rpx;
  text-align: center;
  line-height: 70rpx;
  margin: 0 auto;
  margin-top: 150rpx;
  background-color: white;
}
