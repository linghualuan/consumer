page {
  font-size: 34rpx;
  position: relative;
}
page .number {
  margin-top: 40rpx;
  width: 70vw;
  margin: 40rpx auto;
}
page .number .number_title {
  text-align: right;
  margin-right: 30rpx;
}
page .number .number_int {
  width: 100%;
}
page .number .number_int input {
  height: 80rpx;
  background-color: white;
  border: 2rpx #ccc solid;
  border-radius: 35rpx;
  padding-left: 20rpx;
  filter: opacity(0.7);
}
page .number .number_int .input {
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  border: 2rpx #ccc solid;
  border-radius: 35rpx;
  padding-left: 20rpx;
  filter: opacity(0.7);
}
page .number .number_int textarea {
  background-color: white;
  width: 100%;
  border: 2rpx #ccc solid;
  border-radius: 20rpx;
  padding: 10rpx;
  filter: opacity(0.7);
}
page .submit {
  width: 40vw;
  height: 80rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #6dbccc;
  color: white;
  margin: 40rpx auto;
  line-height: 80rpx;
}
