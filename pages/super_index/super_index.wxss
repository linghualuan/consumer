page {
  background-color: #FAF2F9;
  position: relative;
}
page .content .content_swiper swiper {
  height: calc(100vw * 380 / 1100);
}
page .content .content_swiper swiper image {
  width: 100%;
}
page .content .title {
  width: 90%;
  height: 50rpx;
  margin: 30rpx auto;
  font-size: 35rpx;
  line-height: 50rpx;
  border: 4rpx solid #F8C640;
  border-radius: 25rpx;
  padding-left: 20rpx;
}
page .content .content_item {
  background-color: white;
  width: 92%;
  flex-wrap: wrap;
  display: flex;
  margin-right: 4%;
  margin-left: 4%;
  align-items: center;
}
page .content .content_item .item {
  padding-top: 20rpx;
  width: 25%;
  font-size: 35rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
page .content .content_item .item navigator {
  height: 100%;
  width: 100%;
  text-align: center;
}
page .content .content_item .item navigator image {
  width: 60%;
}
page .content .content_item .item navigator .item_title {
  text-align: center;
}
page .content .content_item .item .QRcode {
  height: 100%;
  width: 100%;
  text-align: center;
}
page .content .content_item .item .QRcode image {
  width: 60%;
}
page .content .content_item .item .QRcode .item_title {
  text-align: center;
}
page .content .content_mag {
  width: 92%;
  background-color: white;
  margin: 0 auto;
  margin-top: 30rpx;
}
page .content .content_mag p {
  display: block;
  margin: 20rpx;
  font-size: 35rpx;
}
page .showQRcode {
  position: absolute;
  top: 30vw;
  left: 10vw;
  width: 80vw;
  height: 550rpx;
  background-color: white;
  border-radius: 10rpx;
}
page .showQRcode .codeHeader {
  height: 10vw;
  position: relative;
}
page .showQRcode .codeHeader .code_title {
  margin-top: 20rpx;
  font-size: 40rpx;
  text-align: center;
}
page .showQRcode .codeHeader .code_error {
  position: absolute;
  right: 10rpx;
  top: 0;
}
page .showQRcode .codeHeader .code_error image {
  width: 50rpx;
  height: 50rpx;
}
page .showQRcode .selectUser .admin {
  width: 80%;
  height: 150rpx;
  background-color: #3399CC;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  margin: 40rpx auto;
  font-size: 40rpx;
}
page .showQRcode .selectUser .admin .admin_title {
  flex: 3;
  color: white;
  text-align: center;
}
page .showQRcode .selectUser .admin .admin_img {
  flex: 1;
}
page .showQRcode .selectUser .admin .admin_img image {
  width: 50%;
}
page .showQRcode .selectUser .patient {
  width: 80%;
  height: 150rpx;
  background-color: #99CCCC;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  margin: 40rpx auto;
}
page .showQRcode .selectUser .patient .patient_title {
  flex: 3;
  color: white;
  text-align: center;
}
page .showQRcode .selectUser .patient .patient_img {
  flex: 1;
}
page .showQRcode .selectUser .patient .patient_img image {
  width: 50%;
}
page .showQRcode .QRCode {
  text-align: center;
}
page .showQRcode .QRCode .QRCode_admin {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
}
page .showQRcode .QRCode .QRCode_admin image {
  width: 100%;
}
page .showQRcode .QRCode .QRCode_patient {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
}
page .showQRcode .QRCode .QRCode_patient image {
  width: 100%;
}
page .showQRcode .QRCode .img_btn {
  width: 200rpx;
  height: 80rpx;
  background-color: #66CCFF;
  margin: 30rpx auto;
  line-height: 80rpx;
  text-align: center;
  border-radius: 20rpx;
}
